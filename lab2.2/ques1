#include <stdio.h>
#define PI 3.14159  // Define a constant for π

int main() {
    float radius, area;

    // Input the radius from the user
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    // Calculate the area using the formula πr²
    area = PI * radius * radius;

    // Display the result
    printf("The area of the circle is: %.2f\n", area);

    return 0;
}
