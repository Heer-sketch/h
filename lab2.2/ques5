#include <stdio.h>
#define PI 3.14159  // Define a constant for π

int main() {
    float radius, perimeter;

    // Input the radius from the user
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    // Calculate the perimeter using the formula: 2 * π * r
    perimeter = 2 * PI * radius;

    // Display the result
    printf("The perimeter (circumference) of the circle is: %.2f\n", perimeter);

    return 0;
}
