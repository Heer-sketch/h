#include <stdio.h>

int main() {
    float x, y, result;

    // Input values for x and y
    printf("Enter the value of x: ");
    scanf("%f", &x);

    printf("Enter the value of y: ");
    scanf("%f", &y);

    // Calculate (x + y)^2
    result = (x + y) * (x + y);

    // Alternatively, you can also use the expanded form:
    // result = (x * x) + (2 * x * y) + (y * y);

    // Display the result
    printf("The value of (x + y)^2 is: %.2f\n", result);

    return 0;
}
